    <%- include("./partials/header.ejs",{title:"Inbox"}) %> 

    <!-- The Add Modal -->
    <div id="myModal" class="modal">

      <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <form id="add-task" action="/api/todo/tasks/add" method="post">
          <fieldset>
            <legend>Add Task</legend>
            <div class="form-element">
              <label for="subject"><span style="color:red">*</span> Title:</label>
              <input type="text" name="subject" id="subject" required>
            </div>
            <div class="form-element">
              <label for="priority">Priority</label>
              <select name="priority" id="priority">
                <option value="normal"><span style="color:blue">normal</span></option>
                <option value="high"><span style="color:rgb(221, 221, 0)">high</span></option>
                <option value="very high"><span style="color:red">very high</span></option>
              </select>
            </div>
            <div class="form-element">
              <label for="dueDate">Date(Default:Today):</label><br>
              <input type="date" name="dueDate" id="dueDate" >
            </div>

            <div class="form-element">
              <label for="comment">Comment(optional):</label><br>
              <textarea name="comment" id="comment" cols="20" rows="3" placeholder="optional comment"></textarea>
            </div>

            <button type="submit">Add</button>
          </fieldset>
        </form>
      </div>

    </div>


        <!-- The Update Modal -->
    <div id="myModalUpd" class="modal">

      <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <form id="update-task" action="/api/todo/tasks/update/taskId" method="post">
          <fieldset>
            <legend>Update Task</legend>
            <div class="form-element">
              <label for="subjectUpd"><span style="color:red">*</span> Title:</label>
              <input type="text" name="subject" id="subjectUpd" required>
            </div>
            <div class="form-element">
              <label for="priorityUpd">Priority</label>
              <select name="priority" id="priorityUpd">
                <option value="normal"><span style="color:blue">normal</span></option>
                <option value="high"><span style="color:rgb(221, 221, 0)">high</span></option>
                <option value="very high"><span style="color:red">very high</span></option>
              </select>
            </div>
            <div class="form-element">
              <label for="dueDateUpd">Date:</label><br>
              <input type="date" name="dueDate" id="dueDateUpd" >
            </div>

            <div class="form-element">
              <label for="commentUpd">Comment(optional):</label><br>
              <textarea name="comment" id="commentUpd" cols="20" rows="3" placeholder="optional comment"></textarea>
            </div>

            <button type="submit">Update</button>
          </fieldset>
        </form>
      </div>

    </div>
      
