
    <%- include("./partials/header.ejs",{title:"Today"}) %>


    <!-- The Modal -->
    <div id="myModal" class="modal">

      <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <form id="add-task" action="/api/todo/tasks/add" method="post">
          <fieldset>
            <legend>Add Task</legend>
            <div class="form-element">
              <label for="subject"><span style="color:red">*</span> Title:</label>
              <input type="text" name="subject" id="subject" required>
            </div>
            <div class="form-element">
              <label for="priority">Priority</label>
              <select name="priority" id="priority">
                <option value="normal"><span style="color:blue">normal</span></option>
                <option value="high"><span style="color:rgb(221, 221, 0)">high</span></option>
                <option value="very high"><span style="color:red">very high</span></option>
              </select>
            </div>
            <div class="form-element">
              <label for="dueDate">Date(Default:Today):</label><br>
              <input type="date" name="dueDate" id="dueDate" >
            </div>

            <div class="form-element">
              <label for="comment">Comment(optional):</label><br>
              <textarea name="comment" id="comment" cols="20" rows="3" placeholder="optional comment"></textarea>
            </div>

            <button type="submit">Add</button>
          </fieldset>
        </form>
      </div>

    </div>

    <section class="u-clearfix u-grey-15 u-section-1" id="sec-ef11">
      <div class="u-clearfix u-sheet u-sheet-1">
        <h3 class="u-text u-text-1">Today</h3>
         <ul class="u-text u-text-palette-2-base u-text-2 ul-task ulVeryHigh">
          <% tasks.forEach(task => { %>
            <% if(task.priority == "very high" && task.done == false){ %>
          <li>
            <span style="font-size: 1.5rem" class="u-text-black">
              <%=task.subject %>
            </span>
            <br>
            <span>
              <a class="my-btn btn-del" href="/api/todo/tasks/delete/<%=task._id %>">Delete</a>
            </span>
            <span>
              <a class="my-btn btn-upd" href="/api/todo/tasks/update/<%=task._id %>">Update</a>
            </span>
            <span>
              <a class="my-btn btn-don" href="/api/todo/tasks/done/<%=task._id %>">Done</a>
            </span>
          </li>
            <% } %>
          <% }) %>
        </ul>
        <ul class="u-text u-text-palette-3-base u-text-4 ul-task ulHigh">
          <% tasks.forEach(task => { %>
            <% if(task.priority == "high" && task.done == false){ %>
          <li>
            <span style="font-size: 1.5rem" class="u-text-black">
              <%=task.subject %>
            </span>
            <br>
            <span>
              <a class="my-btn btn-del" href="/api/todo/tasks/delete/<%=task._id %>">Delete</a>
            </span>
            <span>
              <a class="my-btn btn-upd" href="/api/todo/tasks/update/<%=task._id %>">Update</a>
            </span>
            <span>
              <a class="my-btn btn-don" href="/api/todo/tasks/done/<%=task._id %>">Done</a>
            </span>
          </li>
            <% } %>
          <% }) %>
        </ul> 
        <ul class="u-text u-text-palette-1-base u-text-3 ul-task ulNormal">
          <% tasks.forEach(task => { %>
            <% if(task.priority == "normal" && task.done == false){ %>
          <li>
            <span style="font-size: 1.5rem;margin-right:120px" class="u-text-black">
              <%=task.subject %>
            </span>
            <br>
            <span>
              <a class="my-btn btn-del" href="/api/todo/tasks/delete/<%=task._id %>">Delete</a>
            </span>
            <span>
              <a class="my-btn btn-upd" href="/api/todo/tasks/update/<%=task._id %>">Update</a>
            </span>
            <span>
              <a class="my-btn btn-don" href="/api/todo/tasks/done/<%=task._id %>">Done</a>
            </span>
          </li>
            <% } %>
          <% }) %>
        </ul>
      </div>      
    </section>
    <section  class="u-clearfix u-grey-15 add-btn-section">
      <button id="add-btn"  
      class="u-btn u-btn-round u-button-style u-hover-palette-1-light-1 u-palette-1-base u-radius-50">
      Add Task<br />
    </button>
    </section>
    
    <script src="/js/mypanel-today.js"></script>

